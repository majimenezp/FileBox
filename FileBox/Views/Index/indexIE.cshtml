@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = "Views/Shared/Layout.cshtml";
}
@section Header{
    <script src="@Url.Content("~/Content/js/libs/mdc.js")"></script>
    <script src="@Url.Content("~/Content/js/libs/jquery.zclip.min.js")"></script>
    <script type="text/javascript">
        var urlZClip = "@Url.Content("~/Content/ZeroClipboard.swf")";
        var urlTemplates = '@Url.Content("~/templates/")';
        var url = '@Url.Content("~/files")';
        var uploadedMessage = "@Text.Text.UploadedMessage";
    </script>
}
<div id="uploadSection">
    <form class="form-horizontal" role="form" method="post" action="@Url.Content("~/filesIE")" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file" class="col-lg-2 control-label">@Text.Text.File</label>
            <div class="col-lg-6">
                <input type="file" name="file" id="file" class="form-control input-lg" placeholder="@Text.Text.Fileplaceholder" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-primary">@Text.Text.FileUploadButton</button>
            </div>
        </div>
    </form>
</div>
